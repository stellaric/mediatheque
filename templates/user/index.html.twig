{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
{% include "admin/header.html.twig" %}
    <h1 class="text-center">Liste Inscrit</h1>
<main class="main_admin ">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>DateNaissance</th>
                <th>AdressePostale</th>
                <th>Email</th>
                <th>Password</th>
                <th>Role</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ user.adressePostale }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.role ? 'Admin' : 'Inscrit' }}</td>
                <td>{{ user.active ? 'Active' : 'DÃ©sactive' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</main>
    {% include "admin/footer.html.twig" %}
{% endblock %}
